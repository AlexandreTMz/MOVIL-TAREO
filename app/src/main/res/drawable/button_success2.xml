<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="false">
        <layer-list>
            <item>
                <shape>
                    <solid android:color="@android:color/darker_gray" />
                    <corners android:radius="19dp" />
                </shape>
            </item>
            <item android:bottom="5px">
                <shape>
                    <padding android:bottom="5dp" />
                    <solid android:color="@color/colorSuccess2"></solid>
                    <corners android:radius="19dp" />
                    <padding android:bottom="5dp" android:left="5dp" android:right="5dp" android:top="5dp" />
                </shape>
            </item>
        </layer-list>
    </item>

    <item android:state_pressed="true">
        <layer-list>
            <item>
                <shape>
                    <stroke android:color="@color/colorSuccessDarck2" android:width="5dp"></stroke>
                    <solid android:color="#102746" />
                    <corners android:radius="19dp" />
                </shape>
            </item>
            <item android:bottom="5px">
                <shape>
                    <padding android:bottom="5dp" />
                    <solid android:color="@color/colorSuccessDarck2"></solid>
                    <corners android:radius="19dp" />
                    <padding android:bottom="5dp" android:left="5dp" android:right="1dp" android:top="5dp" />
                </shape>
            </item>
        </layer-list>
    </item>
</selector>