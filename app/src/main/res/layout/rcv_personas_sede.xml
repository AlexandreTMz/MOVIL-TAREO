<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    >

    <androidx.cardview.widget.CardView
        android:id="@+id/cvwContenidoPr"
        android:layout_width="match_parent"
        android:layout_height="106dp"
        android:clickable="true"
        android:foreground="?android:attr/selectableItemBackground"
        android:paddingTop="10dp"
        android:paddingBottom="20dp"
        app:cardBackgroundColor="@color/white"
        app:cardCornerRadius="6dp"
        app:cardElevation="5dp"
        app:cardUseCompatPadding="true"
        >

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <RelativeLayout
                android:id="@+id/lyDataPrincipal"
                android:layout_width="match_parent"
                android:layout_height="87dp">

                <LinearLayout
                    android:id="@+id/lnyContenido"
                    android:layout_width="match_parent"
                    android:layout_height="106dp"
                    android:orientation="horizontal"
                    >
                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight=".85"
                        android:background="#5B61D9"
                        android:gravity="center"
                        >

                        <TextView
                            android:id="@+id/tvwDiaReg"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:text="24"
                            android:textColor="@color/colorText"></TextView>

                        <TextView
                            android:id="@+id/tvwMesReg"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/tvwDiaReg"
                            android:gravity="center"
                            android:text="AGOST"
                            android:textColor="@color/colorText"
                            android:textStyle="bold"></TextView>

                        <TextView
                            android:id="@+id/tvwAnioReg"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/tvwMesReg"
                            android:gravity="center"
                            android:text="2021"
                            android:textColor="@color/colorText"></TextView>

                    </RelativeLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight=".35"
                        android:orientation="vertical"
                        android:paddingHorizontal="5dp"
                        android:paddingVertical="5dp"
                        android:gravity="center_vertical"
                        >
                        <TextView
                            android:id="@+id/tvwNombreEm"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="JIMMY VERGARA BLAS ALEXANDRE"
                            android:textStyle="bold"
                            ></TextView>
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">
                            <TextView
                                android:id="@+id/tvwTpDocEm"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="DNI"
                                android:layout_marginRight="10dp"
                                android:textStyle="bold"
                                ></TextView>
                            <TextView
                                android:id="@+id/tvwNrDocEm"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="48870137"
                                ></TextView>
                        </LinearLayout>
                        <TextView
                            android:id="@+id/tvwTipoTeEm"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="TITULAR"
                            ></TextView>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight=".80"
                        android:orientation="vertical"
                        android:weightSum="2"
                        >

                        <LinearLayout
                            android:background="#5B61D9"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            >
                            <TextView
                                android:id="@+id/tvwNacionaldiadEm"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:textColor="@color/colorText"
                                android:text="PERUANA"
                                android:textStyle="bold"
                                android:gravity="center"
                                ></TextView>
                        </LinearLayout>

                        <LinearLayout
                            android:background="#4E7CD9"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            >
                            <TextView
                                android:id="@+id/tvwTipoOperaEm"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:textColor="@color/colorText"
                                android:text="OPERARIO"
                                android:gravity="center"
                                ></TextView>
                        </LinearLayout>

                    </LinearLayout>
                </LinearLayout>

                <ImageView
                    android:id="@+id/imgVerMas"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    app:srcCompat="@drawable/ico_arrow"
                    android:layout_below="@+id/lnyContenido"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="-30dp"
                    ></ImageView>


            </RelativeLayout>

            <LinearLayout
                android:id="@+id/lnySecundario"
                android:layout_below="@+id/lyDataPrincipal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/colorText"
                android:orientation="horizontal"
                android:paddingHorizontal="10dp"
                android:paddingVertical="10dp"
                android:visibility="gone"
                >
                <TextView
                    android:id="@+id/tvwBancoEm"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="BANCO CENTRAL DEL PERU"
                    android:layout_weight="1"
                    ></TextView>
                <TextView
                    android:id="@+id/tvwCcEm"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="00038548454545454"
                    android:layout_weight="1"
                    android:gravity="end"
                    android:textStyle="bold"
                    ></TextView>
            </LinearLayout>

        </RelativeLayout>

    </androidx.cardview.widget.CardView>

</LinearLayout>