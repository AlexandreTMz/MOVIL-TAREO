<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <androidx.cardview.widget.CardView
        android:id="@+id/cvwPaquete"
        android:layout_width="match_parent"
        android:layout_height="110dp"
        android:clickable="true"
        android:foreground="?android:attr/selectableItemBackground"
        android:paddingTop="10dp"
        android:paddingBottom="20dp"
        app:cardBackgroundColor="@color/white"
        app:cardCornerRadius="6dp"
        app:cardElevation="5dp"
        app:cardUseCompatPadding="true">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="10dp"
            >

            <TextView
                android:id="@+id/tvNombreEmp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="6dp"
                android:text="Nombres"
                android:textStyle="bold"></TextView>

            <TextView
                android:id="@+id/tvDocumentoTpEmp"
                android:layout_below="@+id/tvNombreEmp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="TIPO DE DOCUMENTO"
                android:layout_marginRight="10dp"
                ></TextView>

            <TextView
                android:id="@+id/tvDocumentoNrEmp"
                android:layout_below="@+id/tvNombreEmp"
                android:layout_toRightOf="@+id/tvDocumentoTpEmp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="NR DOCUMENTO"
                android:textStyle="bold"
                ></TextView>


            <TextView
                android:id="@+id/tvBancoEmp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tvDocumentoNrEmp"
                android:layout_marginRight="10dp"
                android:text="BANCO"></TextView>

            <TextView
                android:id="@+id/tvCuentaEmp"
                android:layout_below="@+id/tvBancoEmp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="CCI / CUENTA"
                android:textStyle="bold"
                ></TextView>

            <LinearLayout
                android:layout_width="135dp"
                android:layout_height="90dp"
                android:layout_alignParentRight="true"
                android:layout_marginTop="0dp"
                android:layout_marginRight="-60dp"
                android:background="#52BF04"
                android:gravity="bottom|center"
                android:orientation="vertical"
                android:paddingBottom="18dp"
                android:rotation="90">

                <TextView
                    android:id="@+id/tvSeleccionar"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="SELECCIONAR"
                    android:textColor="#FFF"
                    android:textSize="12sp"
                    android:textStyle="bold"></TextView>
            </LinearLayout>
        </RelativeLayout>
    </androidx.cardview.widget.CardView>
</LinearLayout>